{
  "type": "crud",
  "name": "articleList",
  "api": {
    "url": "/api/article-list?id=${id}&dataType=${dataView}",
    "method": "post",
    "data": {
      "dataType": "${dataView}",
      "keyword": "${searchText}",
      "relativity": "${optRelativity}",
      "sourceType": "${optSourceType}",
      "startTime": "${optStartTime}",
      "endTime": "${optEndTime}",
      "page": "${page}",
      "perPage": "${perPage}"
    }
  },
  "syncLocation": false,
  "mode": "cards",
  "defaultParams": {
    "perPage": 15
  },
  "perPageAvailable": [5, 10, 15, 20],
  "placeholder": "没有主题数据",
  "columnsCount": 2,
  "filterDefaultVisible": true,
  "filter": {
    "initApi": "get:/api/get_options?id=${id}",
    "className": "border border-solid rounded border-gray-300 shadow-md p-2 mb-2",
    "wrapWithPanel": false,
    "visible": true,
    "mode": "inline",
    "debug": false,
    "controls": [
      {
        "type": "group",
        "controls": [
          {
            "label": "正负面",
            "type": "select",
            "name": "optRelativity",
            "multiple": true,
            "joinValues": true,
            "extractValue": false,
            "options": [
              {
                "label": "正面",
                "value": "1"
              },
              {
                "label": "负面",
                "value": "-1"
              },
              {
                "label": "中性",
                "value": "0"
              }
            ]
          },
          {
            "label": "资源",
            "type": "select",
            "name": "optSourceType",
            "multiple": true,
            "joinValues": true,
            "extractValue": false,
            "options": [
              {
                "label": "资讯",
                "value": "0"
              },
              {
                "label": "论坛",
                "value": "1"
              },
              {
                "label": "贴吧",
                "value": "3"
              },
              {
                "label": "微博",
                "value": "4"
              },
              {
                "label": "微信",
                "value": "11"
              }
            ]
          },
          {
            "type": "datetime",
            "name": "optStartTime",
            "placeholder": "请选择开始时间"
          },
          {
            "type": "datetime",
            "name": "optEndTime",
            "maxDate": "now",
            "value": "now",
            "placeholder": "请选择结束时间"
          },
          {
            "type": "submit",
            "label": "筛选",
            "level": "primary",
            "icon": "fa fa-filter pull-left",
            "className": "text-info"
          },
          {
            "name": "searchText",
            "type": "text",
            "placeholder": "请输入关键词",
            "addOn": {
              "type": "submit",
              "level": "info",
              "icon": "fa fa-search pull-left",
              "label": "搜索"
            }
          }
        ]
      }
    ]
  },
  "filterTogglable": true,
  "headerToolbar": [
    "filter-toggler",
    {
      "type": "tpl",
      "tpl": "共 ${count} 条",
      "inline": true,
      "className": "pull-right text-xs font-normal border border-solid rounded-xl border-green-500 bg-green-500 text-white pl-1 pr-1 mt-1 ml-4"
    },
    {
      "type": "button",
      "label": " ",
      "icon": "fa fa-refresh",
      "size": "md",
      "className": "pull-right no-border text-info text-xl p-none",
      "actionType": "ajax",
      "api": "/api/article-list?id=${id}&dataType=${dataView}"
    }
  ],
  "footerToolbar": [
    "switch-per-page",
    "pagination"
  ],
  "card": {
    "className": "border border-solid rounded shadow",
    "bodyClassName": "padder ml-1 mt-1 p-1",
    "body": [
      {
        "type": "container",
        "body": [
          {
            "type": "button",
            "label": " ",
            "icon": "fa fa-edit",
            "size": "sm",
            "className": "no-border m-0 p-0 text-xs text-info",
            "confirmText": "确认要将该数据标为无效数据吗？标记后，与其相似的${redup_count}条数据也会一同标为无效数据",
            "actionType": "ajax",
            "api": "get:/api/setInvalidFlag?articleId=${url_crc}",
            "reload": "articleList"
          },
          {
            "type": "link",
            "visibleOn": "showArticle != 'inDrawer'",
            "href": "${url | url_decode}",
            "body": "<%= data.title %>",
            "blank": true,
            "inline": true,
            "className": "font-semibold ml-2 text-md text-blue-500"
          },
          {
            "type": "button",
            "label": " ",
            "visibleOn": "showArticle == 'inDrawer'",
            "icon": "fa fa-eye",
            "inline": false,
            "size": "sm",
            "className": "no-border m-0 p-0 text-xs text-info",
            "actionType": "drawer",
            "drawer": {
              "title": "",
              "position": "bottom",
              "closeOnOutside": true,
              "resizable": true,
              "size": "xl",
              "actions": [],
              "body": [
                {
                  "type": "iframe",
                  "src": "${url | url_decode}"
                }
              ]
            }
          },
          {
            "type": "tpl",
            "name": "articleTitle",
            "visibleOn": "showArticle == 'inDrawer'",
            "tpl": "<%= data.title %>",
            "inline": true,
            "className": "font-semibold ml-2 text-md text-blue-500"
          },
          {
            "type": "button",
            "label": "相似：<%= data.redup_count %>",
            "visibleOn": "data.redup_count > 0",
            "inline": false,
            "size": "sm",
            "className": "font-normal ml-2 mr-2 pull-right border border-solid rounded bg-red-400 text-white",
            "actionType": "dialog",
            "dialog": {
              "title": "相似内容列表",
              "showCloseButton": true,
              "closeOnEsc": true,
              "size": "md",
              "actions": [],
              "body": [
                {
                  "type": "service",
                  "schemaApi": "get:/pages/show-similar-list.json"
                }
              ]
            }
          }
        ],
        "className": "p-0 m-0"
      },
      {
        "type": "container",
        "body": [
          {
            "type": "tpl",
            "tpl": "<%= data.summary %>",
            "inline": false,
            "className": "text-sm text-gray-500"
          }
        ],
        "className": "ml-5 p-1"
      },
      {
        "type": "container",
        "className": "m-1 p-1",
        "body": [
          {
            "type": "tpl",
            "tpl": "<%= this.dict.relativity[data.relativity] %>",
            "inline": true,
            "visibleOn": "data.relativity == '0'",
            "className": "border border-solid rounded border-blue-400 bg-blue-400 text-white p-1 text-sm"
          },
          {
            "type": "tpl",
            "tpl": "<%= this.dict.relativity[data.relativity] %>",
            "inline": true,
            "visibleOn": "data.relativity == '1'",
            "className": "border border-solid rounded border-green-400 bg-green-400 text-white p-1 text-sm"
          },
          {
            "type": "tpl",
            "tpl": "<%= this.dict.relativity[data.relativity] %>",
            "inline": true,
            "visibleOn": "data.relativity == '-1'",
            "className": "border border-solid rounded border-red-400 bg-red-400 text-white p-1 text-sm"
          },
          {
            "type": "tpl",
            "tpl": "<%= this.dict.source_type[data.source_type] %>",
            "inline": true,
            "className": "border border-solid rounded bg-blue-400 text-white p-1 text-sm"
          },
          {
            "type": "tpl",
            "tpl": "来源：<%= data.media_name %>",
            "inline": true,
            "className": "border border-solid rounded border-yellow-500 text-yellow-500 p-1 text-sm"
          },
          {
            "type": "tpl",
            "tpl": "出处：<%= data.content_media_name %>",
            "inline": true,
            "className": "border border-solid rounded border-red-500 text-red-500 p-1 text-sm",
            "visibleOn": "data.content_media_name != ''"
          },
          {
            "type": "tpl",
            "tpl": "<%= data.release_date %>",
            "inline": true,
            "className": "border border-solid rounded border-green-500 text-green-500 p-1 text-sm ml-2"
          }
        ]
      },
      {
        "type": "container",
        "className": "p-0 ml-1",
        "body": [
          {
            "type": "tpl",
            "tpl": "标签：<%= data.tag %> | 特征词：<%= data.keyword %>",
            "inline": false,
            "className": "text-sm text-black"
          }
        ]
      }
    ],
    "actions": []
  }
}